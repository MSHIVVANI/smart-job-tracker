generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String              @id @default(cuid())
  email              String              @unique
  password           String
  profile            String?             @db.Text
  applications       Application[]
  serviceCredentials ServiceCredential[]
}

model Application {
  id            String    @id @default(cuid())
  company       String
  roleTitle     String
  jobUrl        String?
  status        String    @default("Applied")
  notes         String?   @db.Text // New field for notes
  interviewDate DateTime? // For interviews
  offerDeadline DateTime? // For offer deadlines
  followUpDate  DateTime? // For follow-up reminders
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  user          User      @relation(fields: [userId], references: [id])
  userId        String
}
  
  

model ServiceCredential {
  id           String    @id @default(cuid())
  service      String
  accessToken  String    @db.Text
  refreshToken String?   @db.Text
  expiryDate   BigInt?
  user         User      @relation(fields: [userId], references: [id])
  userId       String
}